---
import AdditionalInformation from "@/features/additional-information/additional-information.component.astro";
import { additionalInfo } from "@/features/additional-information/additional-information.constants";
import Education from "@/features/education/education.component.astro";
import { education } from "@/features/education/education.constants";
import ProfileSection from "@/features/profile-section/profile-section.component.astro";
import WorkExperienceEntry from "@/features/work-experience/work-experience.component.astro";
import {
  profileSummary,
  workExperience,
} from "@/features/work-experience/work-experience.constants";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { profileSummaryText } from "./profile.styles";
---

<BaseLayout title="Profile" description="CV-style profile, skills, and experience.">
	<div class="profile-content">
		<ProfileSection title="Summary" isFirst>
			<p class={profileSummaryText}>{profileSummary}</p>
		</ProfileSection>

		<ProfileSection title="Work experience">
		{workExperience.map((entry, index) => (
			<WorkExperienceEntry
				entry={entry}
				isLast={index === workExperience.length - 1}
			/>
		))}
		</ProfileSection>

		<ProfileSection title="Education">
			<Education education={education} />
		</ProfileSection>

		<ProfileSection title="Additional information">
			<AdditionalInformation items={additionalInfo} />
		</ProfileSection>
	</div>
</BaseLayout>
